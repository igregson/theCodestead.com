{
  "name": "codestead",
  "version": "1.0.0",
  "description": "Hugo theme for theCodestead.com",
  "main": "static/assets/js/index.js",
  "scripts": {
    "hugo:build": "cd ../../ && hugo",
    "hugo:watch": "cd ../../ && hugo server -w",
    "css:build": "scss-cli --output-style compressed './static-src/assets/sass/**/*.{scss,sass}' --glob -o static/assets/css",
    "postcss:build": "autoprefixer -b 'last 2 versions' static/assets/css/*.css",
    "css:watch": "onchange './static-src/assets/sass/' -- npm run css:build",
    "js:build": "browserify static-src/assets/js/index.js -d -p [minifyify --map bundle.map.json --output static/assets/js/bundle.map.json] > static/assets/js/bundle.js",
    "js:watch": "watchify static-src/assets/js/index.js -o static/assets/js/bundle.js",
    "build": "npm run css:build && npm run js:build",
    "prewatch": "npm run build",
    "watch": "parallelshell 'npm run css:watch' 'npm run js:watch'",
    "start": "npm run watch",
    "deploy": "npm run hugo:build && rsync --delete -r public/ isaac@isaacgregson.com:/var/www/thecodestead/thecodestead.com",
    "predeploy": "npm run build",
    "postdeploy": "echo '[GOOD-NEWS] shipped!'"
  },
  "author": "Pixel & Kraft",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^5.1.0",
    "browserify": "^9.0.3",
    "minifyify": "^6.4.0",
    "onchange": "^1.0.0",
    "parallelshell": "^1.1.1",
    "scss-cli": "0.0.5",
    "watchify": "^3.1.0"
  }
}
